#! /usr/bin/env python

print "SERPINT NETWORK GPIO TOOLKIT"
print "           V34              "
print

import sys, os
cmd=""
for i in sys.argv[1:]:cmd=cmd+" "+i
path=""
f=__file__.split("/")
del f[len(f)-1]
for i in f:
	path=path+i+"/"
path=path.replace("./", "", 1)
os.system("cd '"+path+"'; sudo -p 'Please Enter Your Password, To Authorize Serpint: ' python main.py"+cmd)
print
print "To clean up your system, run ./serpint cleanup"
print "EXIT"
